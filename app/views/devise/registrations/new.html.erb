<div class="d-flex justify-content-center mt-4">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, required: true, autofocus: true, label: 'Name' %>
      <%= f.input :address, required: true, label: 'Address' %>
      <%= f.input :email, required: true, input_html: { autocomplete: "email" }, label: 'Email' %>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" }, label: 'Password' %>
      <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" }, label: 'Confirm Password' %>

      <div class="form-group mt-3">
        <%= f.label :is_farmer, 'Are you a farmer?', class: 'd-block mt-2' %>
        <%= f.collection_radio_buttons :is_farmer, [[true, 'Yes'], [false, 'No']], :first, :last, class: 'bob' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: 'btn btn-primary mt-4' %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
