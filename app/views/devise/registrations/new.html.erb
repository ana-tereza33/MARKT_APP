<div class="d-flex justify-content-center mt-4">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, required: true, autofocus: true, label: 'Name', input_html: {class: 'fillform-new'} %>
      <%= f.input :address, required: true, label: 'Address', input_html: {class: 'fillform-new'} %>
      <%= f.input :email, required: true, input_html: { autocomplete: "email" }, label: 'Email', input_html: {class: 'fillform-new'} %>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" }, label: 'Password', input_html: {class: 'fillform-new'} %>
      <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" }, label: 'Confirm Password', input_html: {class: 'fillform-new'} %>

      <div class="form-group mt-3 mb-3">
        <%= f.label :is_farmer, 'Are you a farmer?', class: 'd-block mt-2' %>
        <%= f.collection_radio_buttons :is_farmer, [[true, 'Yes'], [false, 'No']], :first, :last, class: 'bob' %>
      </div>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Sign up", class: 'button' %>
    </div>
  <% end %>
</div>
