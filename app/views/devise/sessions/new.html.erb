<div class="container mt-4 text-center">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: 'fillform-new' },
                      label: false,
                      placeholder: "Email" %>
        </div>
        <div class="mb-3">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: 'fillform-new' },
                      label: false,
                      placeholder: "Password" %>
        </div>

        <div class="mb-3 form-check">
          <%= f.input :remember_me, as: :boolean, label: "Remember me" if devise_mapping.rememberable? %>
        </div>

        <div class="mb-3 d-grid gap-2">
          <%= f.button :submit, "Log in", class: 'button btn btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
