<div class="homepage-container">
  <h1 class="homepage-heading">Connect with farmers.</h1>
  <h1 class="homepage-heading">Buy locally.</h1>
  <h1 class="homepage-heading">Be sustainable.</h1>
  
  <!-- Bild -->
  <div class="image-container">
    <%= image_tag("markt_basket.png", alt: "Market Basket") %>
  </div>

  <!-- Formular -->
  <div class="form-container">
    <%= form_tag("/search", method: "get") do %>
      <%= text_field_tag(:postcode, nil, placeholder: "Postcode:", class: "form-control") %>
      <%= submit_tag("Search", class: "btn btn-primary btn-block") %>
    <% end %>
  </div>
</div>

    
